{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/auth/:path*", "destination": "/api/index.js" },
    { "source": "/events/:path*", "destination": "/api/index.js" },
    { "source": "/notifications/:path*", "destination": "/api/index.js" },
    { "source": "/reports/:path*", "destination": "/api/index.js" },
    { "source": "/admin/:path*", "destination": "/api/index.js" },
    { "source": "/realtime/:path*", "destination": "/api/index.js" },
    { "source": "/api-docs", "destination": "/api/index.js" },
    { "source": "/", "destination": "/index.html" }
  ]
}
