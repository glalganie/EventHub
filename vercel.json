{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(auth|events|notifications|reports|admin)(/.*)?", "dest": "api/index.js" },
    { "src": "/realtime/(.*)", "dest": "api/index.js" },
    { "src": "/api-docs", "dest": "api/index.js" },
    { "src": "/", "dest": "public/index.html" },
    { "src": "/(.*)", "dest": "public/$1" }
  ]
}
